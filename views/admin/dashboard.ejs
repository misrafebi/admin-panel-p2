<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <style>
    /* Custom CSS */
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f9fa;
    }
    .navbar {
      background-color: #343a40;
    }
    .navbar-brand {
      color: white;
    }
    .logout-btn {
      background-color: #ff9800;
      color: white;
    }
    .logout-btn:hover {
      background-color: #e68900;
    }
    .table th {
      background-color: #ff5722;
      color: white;
    }
    .add-user-btn {
      background-color: #28a745;
      color: white;
    }
    .add-user-btn:hover {
      background-color: #218838;
    }
    .action-btn {
      padding: 5px 10px;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Admin Dashboard</a>
      <button class="btn logout-btn">Logout</button>
    </div>
  </nav>

  <!-- Content -->
  <div class="container mt-5">
    <h2 class="mb-4">User Management</h2>
    <button class="btn add-user-btn mb-3" onclick="openAddUser()">Add User</button>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Sl.No</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach((user, index) => { %>
          <tr>
            <td><%= index +1 %></td>
            <td><%= user.username %></td>
            <td>
              <button class="btn btn-primary action-btn" onclick="openEditUser()">Edit</button>
              <button class="btn btn-danger action-btn" onclick="openDeleteUser()">Delete</button>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
